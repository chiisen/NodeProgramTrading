{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "scraper:Debug Nest Framework",
            "args": [
                "${workspaceFolder}/scraper/src/main.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "sourceMaps": true,
            "envFile": "${workspaceFolder}/scraper/.env",
            "cwd": "${workspaceRoot}/scraper",
            "console": "integratedTerminal"
        }
    ]
  }